<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_background"
    tools:context=".RegistrationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--        <com.airbnb.lottie.LottieAnimationView-->
        <!--            android:layout_width="180sp"-->
        <!--            android:layout_height="170sp"-->
        <!--            android:layout_gravity="center"-->
        <!--            android:layout_margin="16sp"-->
        <!--            app:lottie_autoPlay="true"-->
        <!--            app:lottie_loop="true"-->
        <!--            />-->

        <ImageView
            android:layout_width="180sp"
            android:layout_height="170sp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="16sp"
            android:src="@drawable/registration" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16sp"
            app:cardBackgroundColor="#B5D1461A"
            app:cardCornerRadius="16sp"
            app:cardElevation="16sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16sp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/new_registration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/abril_fatface"
                    android:gravity="center"
                    android:text="Register Here"
                    android:textColor="@color/black"
                    android:textSize="28sp"
                    android:layout_marginBottom="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:hint="Enter Full Name"
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:paddingStart="16dp"
                    android:drawableStart="@drawable/name_icon"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/fieldshape"
                    android:textStyle="bold|italic" />

                <EditText
                    android:id="@+id/et_mobile_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:hint="Enter Mobile No."
                    android:inputType="number"
                    android:maxLength="10"
                    android:minHeight="48dp"
                    android:textColor="@color/black"
                    android:paddingStart="16dp"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp"
                    android:drawableStart="@drawable/phone_icon"
                    android:textStyle="bold|italic"
                    android:background="@drawable/fieldshape" />

                <EditText
                    android:id="@+id/et_email_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:hint="Enter Email ID"
                    android:inputType="textEmailAddress"
                    android:minHeight="48dp"
                    android:textColor="@color/black"
                    android:drawableStart="@drawable/email_icon"
                    android:layout_marginBottom="16dp"
                    android:paddingStart="16dp"
                    android:textSize="16sp"
                    android:textStyle="bold|italic"
                    android:background="@drawable/fieldshape" />

                <EditText
                    android:id="@+id/et_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:hint="Enter Username"
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp"
                    android:paddingStart="16dp"
                    android:textStyle="bold|italic"
                    android:drawableStart="@drawable/username_icon"
                    android:background="@drawable/fieldshape" />

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:hint="Enter Password"
                    android:inputType="textPassword"
                    android:minHeight="48dp"
                    android:textColor="@color/black"
                    android:paddingStart="16dp"
                    android:layout_marginBottom="16dp"
                    android:textSize="16sp"
                    android:textStyle="bold|italic"
                    android:drawableStart="@drawable/password_icon"
                    android:background="@drawable/fieldshape" />

                <CheckBox
                    android:id="@+id/check_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16sp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:minHeight="48dp"
                    android:text="Show Password"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold|italic" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/register_button"
                    android:layout_width="200sp"
                    android:layout_height="50sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16sp"
                    android:layout_marginBottom="16sp"
                    android:background="@drawable/button_shape"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="Register"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</ScrollView>