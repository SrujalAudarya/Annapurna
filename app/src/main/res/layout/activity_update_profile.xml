<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateProfileActivity">

    <!--        <com.airbnb.lottie.LottieAnimationView-->
    <!--            android:layout_width="180sp"-->
    <!--            android:layout_height="170sp"-->
    <!--            android:layout_gravity="center"-->
    <!--            android:layout_margin="16sp"-->
    <!--            app:lottie_autoPlay="true"-->
    <!--            app:lottie_loop="true"-->
    <!--            />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16sp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/new_registration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abril_fatface"
            android:gravity="center"
            android:text="Update Profile"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:layout_marginBottom="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etUpdateName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:hint="Enter Full Name"
            android:inputType="text"
            android:minHeight="48dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:paddingStart="16dp"
            android:drawableStart="@drawable/name_icon"
            android:layout_marginBottom="16dp"
            android:background="@drawable/textviewshape"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/etUpdateMobile_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:hint="Enter Mobile No."
            android:inputType="number"
            android:maxLength="10"
            android:minHeight="48dp"
            android:enabled="false"
            android:textColor="@color/black"
            android:paddingStart="16dp"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:drawableStart="@drawable/phone_icon"
            android:textStyle="bold|italic"
            android:background="@drawable/textviewshape" />

        <EditText
            android:id="@+id/etUpdateEmail_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:hint="Enter Email ID"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:textColor="@color/black"
            android:drawableStart="@drawable/email_icon"
            android:layout_marginBottom="16dp"
            android:paddingStart="16dp"
            android:textSize="16sp"
            android:textStyle="bold|italic"
            android:background="@drawable/textviewshape" />

        <EditText
            android:id="@+id/etUpdateUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:hint="Enter Username"
            android:inputType="text"
            android:minHeight="48dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:paddingStart="16dp"
            android:textStyle="bold|italic"
            android:drawableStart="@drawable/username_icon"
            android:background="@drawable/textviewshape" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/update_button"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_gravity="center"
            android:background="#FF9800"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Save"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>


</ScrollView>