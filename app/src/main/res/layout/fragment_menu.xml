<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".MenuFragment">

    <androidx.appcompat.widget.SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sv_menuFragmentSearch"
        android:textAlignment="center"
        app:queryHint="Search Dishes Here"
        android:layout_margin="16sp"
        app:iconifiedByDefault="false"
        android:background="@drawable/textviewshape" />


    <!--    <ListView-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="match_parent"-->
    <!--        android:id="@+id/lv_menuFragmentMultipleCategory"/>-->

    <GridView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="2"
        android:textAlignment="center"
        android:id="@+id/gv_menuFragmentMultipleCategory" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:id="@+id/tv_menuFragmentNoCategory"
        android:text="No Category Found"
        android:textColor="#FF5722"
        android:textSize="16sp"
        android:fontFamily="@font/aldrich"
        android:visibility="gone" />

</LinearLayout>