<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cvAllProductsList"
        app:cardCornerRadius="12sp"
        android:layout_margin="10dp"
        app:cardElevation="16sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="fitXY"
                android:id="@+id/ivAllProductsList"
                android:src="@drawable/notfound" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:id="@+id/tvAllProductsListDishName"
                    android:text="Product Name"
                    android:textColor="#FF9800"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/aldrich"
                    android:layout_margin="8sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:id="@+id/tvAllProductsListDishRating"
                    android:text="4.4"
                    android:drawableEnd="@drawable/ratingstar"
                    android:textColor="#FF9800"
                    android:textSize="24sp"
                    android:background="@drawable/side_nav_bar"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:fontFamily="@font/aldrich"
                    android:paddingRight="6sp"
                    android:layout_margin="8sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvAllProductsListCategoryName"
                    android:text="Category Name"
                    android:textColor="#FF9800"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/aldrich"
                    android:layout_marginStart="8sp"
                    android:layout_marginTop="8sp"
                    android:paddingRight="16sp" />

                <TextView
                    android:id="@+id/tvAllProductsListDishCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8sp"
                    android:fontFamily="@font/aldrich"
                    android:paddingRight="20sp"
                    android:text="Veg"
                    android:textColor="#FF9800"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvAllProductsListDishPrice"
                    android:text="price"
                    android:drawableLeft="@drawable/rupee"
                    android:textColor="#FF9800"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/aldrich"
                    android:layout_marginTop="8sp"
                    android:paddingRight="16sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="#D2989898"
                android:layout_margin="8sp" />

            <TextView
                android:id="@+id/tvAllProductsListDishOffer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8sp"
                android:fontFamily="@font/aldrich"
                android:paddingRight="20sp"
                android:textAlignment="center"
                android:text="dish Offers"
                android:textColor="#FF9800"
                android:textSize="14sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="#D2989898"
                android:layout_margin="8sp" />

            <TextView
                android:id="@+id/tvAllProductsListDishDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8sp"
                android:fontFamily="@font/aldrich"
                android:paddingRight="20sp"
                android:text="dish Description"
                android:textColor="#FF9800"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>