<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#E6BDBCBC"
    tools:context=".VerifyOTPActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:src="@drawable/verity_otp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OTP Verification"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="@font/abril_fatface"
        android:textSize="30dp"
        android:textColor="@color/black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter the OTP Sent To"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/aldrich"
        android:textSize="18dp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/ReceiveOTPNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+ 91 9890976229"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/aldrich"
        android:textSize="20dp"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/OTPInputCode1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="24dp"
            android:maxLength="1"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/OTPInputCode2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="24dp"
            android:maxLength="1"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/OTPInputCode3"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="24dp"
            android:maxLength="1"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/OTPInputCode4"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="24dp"
            android:maxLength="1"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/OTPInputCode5"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="24dp"
            android:maxLength="1"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/OTPInputCode6"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="24dp"
            android:maxLength="1"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:importantForAutofill="no" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Didn't Receive OTP?"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/abyssinica_sil"
            android:textSize="18dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/resendOTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Resend OTP"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/aldrich"
            android:textSize="18dp"
            android:textColor="#6E0303" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/verifyOTP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:layout_margin="30dp"
        android:background="@drawable/button_shape" />

</LinearLayout>